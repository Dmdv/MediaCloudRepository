<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="ConnectionString" value="UseDevelopmentStorage=true"/>
    <add key="DeviceTable" value="DeviceTable"/>
    <add key="UserTable" value="UserTable"/>
    <add key="MediaTable" value="MediaTable"/>
    <add key="QueryHistory" value="QueryHistory"/>
  </appSettings>
  <!--  To collect diagnostic traces, uncomment the section below or merge with existing system.diagnostics section.
        To persist the traces to storage, update the DiagnosticsConnectionString setting with your storage credentials.
        To avoid performance degradation, remember to disable tracing on production deployments.
  <system.diagnostics>     
    <sharedListeners>
      <add name="AzureLocalStorage" type="MediaRepositoryService.AzureLocalStorageTraceListener, MediaRepositoryService"/>
    </sharedListeners>
    <sources>
      <source name="System.ServiceModel" switchValue="Verbose, ActivityTracing">
        <listeners>
          <add name="AzureLocalStorage"/>
        </listeners>
      </source>
      <source name="System.ServiceModel.MessageLogging" switchValue="Verbose">
        <listeners>
          <add name="AzureLocalStorage"/>
        </listeners>
      </source>
    </sources> 
   </system.diagnostics> -->
  <system.diagnostics>
    <trace>
      <listeners>
        <add type="Microsoft.WindowsAzure.Diagnostics.DiagnosticMonitorTraceListener, Microsoft.WindowsAzure.Diagnostics, Version=1.8.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35"
          name="AzureDiagnostics">
        </add>
      </listeners>
    </trace>
  </system.diagnostics>
  
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  
  <system.serviceModel>
    <services>
      
      <service name="MediaRepositoryWebRole.MediaRepositoryService" behaviorConfiguration="ServiceBehavior">
        <endpoint
          address="UserManager"
          binding="basicHttpBinding"
          bindingConfiguration="BasicHttpBinding"
          contract="MediaRepositoryWebRole.Contracts.IUserManager"/>

        <endpoint
          address="MediaRepositoryService"
          binding="basicHttpBinding"
          bindingConfiguration="BasicHttpBinding"
          contract="MediaRepositoryWebRole.Contracts.IMediaRepositoryService"/>
        
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
        
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost/MediaRepository/Service.svc"/>
          </baseAddresses>
        </host>
        
      </service>
      
    </services>
    
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding" transferMode="Streamed" maxReceivedMessageSize="2147483647" receiveTimeout="00:5:00" maxBufferPoolSize="2147483647"/>
      </basicHttpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
